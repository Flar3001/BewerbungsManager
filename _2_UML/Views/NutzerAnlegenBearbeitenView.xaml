<local:BasePage x:Class="_2_UML.Views.NutzerAnlegenBearbeitenView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2_UML.Views"
      xmlns:converter="clr-namespace:_2_UML.Converter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NutzerAnlegenBearbeitenView">

    <Page.Resources>
        <ResourceDictionary>
            <converter:BoolToGridRowHeightConverter x:Key="BoolToGridHeight"/>
            <converter:ElementIsVisibleConverter x:Key="ElementIsVisible"/>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="50,50,50,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="0.95*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="{Binding TeilnehmerAnsicht, Converter={StaticResource BoolToGridHeight}}"/>
            <RowDefinition Height="{Binding TeilnehmerAnsicht, Converter={StaticResource BoolToGridHeight}}"/>
            <RowDefinition Height="{Binding TeilnehmerAnsicht, Converter={StaticResource BoolToGridHeight}}"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="2"
                Grid.RowSpan="5"
                BorderBrush="Black"
                BorderThickness="1,0,0,0"/>

        <TextBlock Text="Vorname:"
                   FontSize="16"
                   Grid.Column="0"
                   Grid.Row="0"
                   TextDecorations="Underline"/>

        <TextBox Text="{Binding Vorname}"
                 VerticalAlignment="Top"
                   FontSize="16"
                   Grid.Column="1"
                   Grid.Row="0"/>
        <TextBlock Text="Nachname:"
                   FontSize="16"
                   TextDecorations="Underline"                  
                   Grid.Column="3"
                   Grid.Row="0"/>
        <TextBox Text="{Binding Nachname}"
                 VerticalAlignment="Top"
                   FontSize="16"
                   Grid.Column="4"
                   Grid.Row="0"/>

        <TextBlock Text="Telefonnummer:"
                   FontSize="16"
                   TextDecorations="Underline"
                   Grid.Column="0"
                   Grid.Row="1"/>
        <TextBox Text="{Binding Telefonnummer}"
                 VerticalAlignment="Top"
                   FontSize="16"
                   Grid.Column="1"
                   Grid.Row="1"/>
        <TextBlock Text="E-Mail:"
                   FontSize="16"
                   TextDecorations="Underline"
                   Grid.Column="3"
                   Grid.Row="1"/>
        <TextBox Text="{Binding E_Mail}"
                 VerticalAlignment="Top"
                   FontSize="16"
                   Grid.Column="4"
                   Grid.Row="1"/>

        <TextBlock Text="Ort:"
                   FontSize="16"
                   TextDecorations="Underline"
                   Grid.Column="0"
                   Grid.Row="2"/>
        <TextBox Text="{Binding Ort}"
                 VerticalAlignment="Top"
                   FontSize="16"
                   Grid.Column="1"
                   Grid.Row="2"/>
        <TextBlock Text="Postleitzahl:"
                   FontSize="16"
                   TextDecorations="Underline"
                   Grid.Column="3"
                   Grid.Row="2"/>
        <TextBox Text="{Binding Postleitzahl}"
                 VerticalAlignment="Top"
                   FontSize="16"
                   Grid.Column="4"
                   Grid.Row="2"/>

        <TextBlock Text="Straße:"
                   FontSize="16"
                   TextDecorations="Underline"
                   Grid.Column="0"
                   Grid.Row="3"/>
        <TextBox Text="{Binding Straße}"
                 VerticalAlignment="Top"
                   FontSize="16"
                   Grid.Column="1"
                   Grid.Row="3"/>
        <TextBlock Text="Hausnummer:"
                   FontSize="16"
                   TextDecorations="Underline"
                   Grid.Column="3"
                   Grid.Row="3"/>
        <TextBox Text="{Binding Hausnummer}"
                 VerticalAlignment="Top"
                   FontSize="16"
                   Grid.Column="4"
                   Grid.Row="3"/>

        <TextBlock Text="Ausbilder:"
                   FontSize="16"
                   TextDecorations="Underline"
                   Grid.Column="0"
                   Grid.Row="4"/>
        <Combobox  
                   VerticalAlignment="Top"
                   FontSize="16"
                   Grid.Column="1"
                   Grid.Row="4">
        </Combobox>
        <TextBlock Text="Land:"
                   FontSize="16"
                   TextDecorations="Underline"
                   Grid.Column="3"
                   Grid.Row="4"/>
        <TextBox Text="{Binding Land}"
                 VerticalAlignment="Top"
                   FontSize="16"
                   Grid.Column="4"
                   Grid.Row="4"/>

        <Button
            Grid.Column="0"
            Grid.Row="5"
            FontSize="16"
            Width="75"
            Height="30"
            HorizontalAlignment="Left"
            Visibility="{Binding IstNutzerProfil, Converter={StaticResource ElementIsVisible}}"
            Click="NutzerAendern">
            Ändern
        </Button>

        <Button
            Grid.Column="4"
            Grid.Row="5"
            FontSize="16"
            Width="75"
            Height="30"
            HorizontalAlignment="Right"
            Click="LetzteSeite">
            Zurück
        </Button>

    </Grid>
</local:BasePage>
